$Hostname = 'IP_FIXE_JEEDOM'; //Adresse IP de la machine sur laquelle sont stocké les captures
$Username = 'USER_SSH'; //Identifiant de connection SSH
$Password ='PASSWORD_SSH'; //Mot de passe de connection SSH
$Lien_Enreg = '/var/www/html/plugins/camera/data/records/NUM_DOSSIER_CAMERA/'; //Lien absolue (depuis la racine) vers les enregistrement
$Command_1 = "sudo chmod -R 777 ".$Lien_Enreg.""; //Commande SSF pour accorder les droits complets
$Command_2 = "cd ".$Lien_Enreg.""; //Commande SSF pour être dans le bon dossier
$Command_3 = 'sudo ls -v *.jpg | cat -n | while read n f; do mv -n "$f" "image$n.jpg"; done'; //Commande SSH pour renommer les images
$Command = $Command_1." && ".$Command_2." && ".$Command_3."";
$scenario->setData('commande ssh rename NOM_CAMERA',$Command);

$ssh = ssh2_connect($Hostname, 22);
ssh2_auth_password($ssh, $Username, $Password);
ssh2_exec($ssh, $Command);
